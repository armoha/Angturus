import scenes.base as s_base;
import customText3 as ct;

var Timer = 0;

function isEnd() {
    if(Timer < 280) return 1;
    return 0;
}

function main() {
    /*if(s_base.skip == 1 && Timer < 232) {
        Timer = 232;
    }*/

    ct.reset_epd();

    if(Timer == 50) {
        ct.playSound("sound\protoss\witness\pwipss00.WAV");
        ct.reset_epd();
    }

    if(Timer >= 50 && Timer <= 277) {
        ct.print_epd("\n\n ");
        if(Timer == 50 || Timer == 277 - 8 * 3) s_base.initTimer(0);
        if(Timer <= 277 - 8 * 3) {
            s_base.fadeIn("\x13\x04앙튜러스", interval=3, index=0);
        } else {
            s_base.fadeOut("\x13\x04앙튜러스", interval=3, index=0);
        }
    } else if(Timer == 278) ct.print_epd("\n\n\n ");

    if(Timer >= 60 && Timer <= 271) {
        if(Timer == 60 || Timer == 271 - 12 * 3) s_base.initTimer(1);
        if(Timer <= 271 - 12 * 3) {
            s_base.fadeIn("\x13\x11ANGTURUS", interval=3, index=1);
        } else {
            s_base.fadeOut("\x13\x11ANGTURUS", interval=3, index=1);
        }
    } else if(Timer == 272) ct.print_epd(" ");

    if(Timer >= 81 && Timer <= 255) {
        ct.print_epd(" ");
        if(Timer == 81 || Timer == 255 - 23 * 2) s_base.initTimer(2);
        if(Timer <= 255 - 23 * 2) {
            s_base.fadeIn("\x13\x17프로젝트 \x16세레스 \x1CArtanis 제작", interval=3, index=2);
        } else {
            s_base.fadeOut("\x13\x17프로젝트 \x16세레스 \x1CArtanis 제작", interval=2, index=2);
        }
    } else if(Timer == 256) ct.print_epd(" \n ");

    if(Timer >= 90 && Timer <= 246) {
        if(Timer == 90 || Timer == 246 - 23 * 1) s_base.initTimer(3);
        if(Timer <= 246 - 23 * 1) {
            s_base.fadeIn("\x13\x17Project \x16Ceres \x1CPresents", interval=2, index=3);
        } else {
            s_base.fadeOut("\x13\x17Project \x16Ceres \x1CPresents", interval=1, index=3);
        }
    } else if(Timer == 247) ct.print_epd(" ");
    
    if(Timer >= 104 && Timer <= 231) {
        if(Timer == 104 || Timer == 231 - 28 * 2) s_base.initTimer(4);
        if(Timer <= 231 - 28 * 2) {
            s_base.fadeIn("\x13\x0FSpecial thanks to \x19", ct.str(0x57EEEB + 36 * ct.cp), interval=2, index=4);
        } else {
            s_base.fadeOut("\x13\x0FSpecial thanks to \x19", ct.str(0x57EEEB + 36 * ct.cp), interval=2, index=4);
        }
    } else if(Timer == 232) ct.print_epd(" ");

    Timer += 1;
}